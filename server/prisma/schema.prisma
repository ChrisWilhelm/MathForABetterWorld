generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  isPointOfContact Distributor[] @relation("isPointOfContact")
  // checkedPallot Food_Entry[]

}

model Distributor {
  id Int @id @default(autoincrement())
  name String
  user User[] @relation("isPointOfContact")
  // distributedEntry Food_Entry[]
}

model Food_Entry {
  id              Int   @id @default(autoincrement())
  userId          Int
  // entererName     User @relation(fields: [userId], references: [id])
  inputDate       DateTime @default(now())
  expirationDate  DateTime? @db.Date
  weight          Float  @default(0)
  // companyId       Distributor @relation(fields: [userId], references: [id])
  onRack          Boolean   @default(false) // change to relation with rack for where it is?
  inWarehouse     Boolean   @default(false)
  description     String?
}