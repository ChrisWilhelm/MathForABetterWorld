// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  isPointOfContact Distributor[] @relation("isPointOfContact")

}

model Distributor {
  id Int @id @default(autoincrement())
  name String
  user User[] @relation("isPointOfContact")
}


model foodItem {
  id Int @id @default(autoincrement())
  name String
  pallet Pallet @relation(fields: [palletId], references: [id])
  palletId Int
  weight String
  description String
}

model Pallet {
  id Int @id @default(autoincrement())
  rackId Int
  distributor_name String
  rack Rack @relation(fields: [rackId], references: [id])
  foodItems foodItem[]
  weight String
  description String
}

model Rack {
  id Int @id @default(autoincrement())
  location_number_and_letter String   // 1A, 2B, etc
  pallets Pallet[]
  description String
}