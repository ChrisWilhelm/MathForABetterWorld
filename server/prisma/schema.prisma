// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int           @id @default(autoincrement())
  email            String        @unique
  name             String?
  checkedPallot    FoodEntry[]
}

model FoodEntry {
  id             Int         @id @default(autoincrement())
  entryUser      User        @relation(fields: [entryUserId], references: [id])
  entryUserId    Int
  inputDate      DateTime    @default(now())
  expirationDate DateTime?   @db.Date
  weight         Float       @default(0)
  company        Distributor @relation(fields: [companyId], references: [id])
  companyId      Int
  onRack         Boolean     @default(false) // change to relation with rack for where it is?
  inWarehouse    Boolean     @default(false)
  description    String?
  pallet Pallet @relation(fields: [palletId], references: [id])
  palletId Int
}

model Distributor {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  distributedEntry FoodEntry[]
}


model Pallet {
  id Int @id @default(autoincrement())
  rackId Int
  rack Rack @relation(fields: [rackId], references: [id])
  foodItems FoodEntry[]
  weight String
  description String
}

model Rack {
  id Int @id @default(autoincrement())
  location String   // 1A, 2B, etc
  pallets Pallet[]
  description String
  weightLimit Float?
}

model Category {
  id Int @id @default(autoincrement())
  name String
  description String  
}
