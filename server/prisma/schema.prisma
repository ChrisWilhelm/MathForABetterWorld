generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  isPointOfContact Distributor[] @relation("isPointOfContact")
  checkedInPallot Food_Entry[] @relation("checkedInPallot")

}

model Distributor {
  id Int @id @default(autoincrement())
  name String
  user User[] @relation("isPointOfContact")
  isDistributor Food_Entry[] @relation("isDistributor")
}

model Food_Entry {
  entererName     User[] @relation("checkedInPallot") // this shouldn't be User[], just User but what are the fields?
  inputDate       DateTime @default(now())
  expirationDate  DateTime?
  weight          Int
  id              Int   @id @default(autoincrement())
  companyId       Distributor[] @relation("isDistributor") // same with this relation
  onRack          Boolean   @default(false) // change to relation with rack for where it is?
  inWarehouse     Boolean   @default(false)
  description     String?
}